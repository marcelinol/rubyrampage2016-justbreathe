<p>
  <strong>Duration:</strong> <%= @session.duration %> minutes
</p>

<div>
  <span>Share link with other participants</span>
  <div class="input-group">
    <input id="meditation-room" type="text" class="form-control" value="<%= new_meditation_session_participant_url(@session) %>" >
    <span class="input-group-btn">
      <button class="btn btn-default" type="button" data-clipboard-target="#meditation-room">
        <span class="glyphicon glyphicon-copy" aria-hidden="true"></span>
      </button>
    </span>
  </div>
</div>

<div id='participants'>
  Participants: <%= @session.participants.pluck(:name).join(', ') %>
</div>
<hr class="spacer-md"/>

<%= form_for @session, url: { action: :update }, remote: true do |f| %>
  <%= f.hidden_field :status, value: :started %>
  <%= f.submit 'Start Meditating', id: 'start-meditation', class: 'btn btn-success btn-lg btn-block' %>
<% end %>

<%= javascript_include_tag 'share_link' %>
